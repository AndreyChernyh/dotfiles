alias grep='grep --color'
alias ll='ls -lh'
alias rm='rm -i'
alias tf='tail -f'
alias g='grep'
alias o='open'
alias h='history'

# git aliases
alias ga='git add'
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit -v'
alias gca='git commit -a -v'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias glg='git log --stat'

# rails aliases
alias r='rails'

# screen aliases
alias ss='screen -a -A -d -RR ${PWD##*/}'
