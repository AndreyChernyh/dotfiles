alias grep='grep --color'
alias ll='ls -lh'
alias rm='rm -i'
alias tf='tail -f'
alias g='grep'
alias m='mate'
alias mr='mate Capfile Gemfile Procfile Rakefile app/ config/ db/ features/ lib/ public/ spec/ test/ vendor/assets/'
alias o='open'
alias h='history'

# git aliases
alias ga='git add'
alias gl='git pull origin'
alias gp='git push origin'
alias gd='git diff'
alias gc='git commit -v'
alias gca='git commit -a -v'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias glg='git log --stat --max-count=5'

