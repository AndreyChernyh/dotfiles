export HISTCONTROL=ignoreboth HISTSIZE=10000 HISTTIMEFORMAT='%F %T '
shopt -s histappend

function parse_git_branch {
  ref=$(git symbolic-ref HEAD 2> /dev/null) || return
  echo ${ref#refs/heads/}
}

PS1BRANCH="\[$RED\]\$(parse_git_branch)\[$NO_COLOR\]"

PS1="\033k\033\134[\u@\h $PS1BRANCH \[$GREEN\]\w\[$NO_COLOR\]]\n\\$ "
